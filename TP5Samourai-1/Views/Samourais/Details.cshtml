@model BOSamourai.Samourai

@{
    ViewBag.Title = "Details";
}

<h2>Details du Samouraï</h2>

<div>
    <h4>Samourai</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nom)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Force)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Force)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Arme)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Arme.Nom)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ArtMartials)
        </dt>

        <dd>
            @foreach (var item in Model.ArtMartials)
            {
                <p> @Html.DisplayFor(model => item.Nom)</p>
            }
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Potentiel)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Potentiel)
        </dd>


    </dl>
</div>
<p>
    @Html.ActionLink("Edition", "Edit", new { id = Model.Id }, new { @class = "btn btn-default btn-primary" }) |
    @Html.ActionLink("Retour à la liste", "Index", null , new { @class = "btn btn-default btn-success" })
</p>
