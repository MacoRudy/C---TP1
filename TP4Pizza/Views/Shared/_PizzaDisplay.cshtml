@model TP4Pizza.Models.PizzaCreateViewModel



@Html.ValidationSummary(true, "", new { @class = "text-danger" })
@*pour la view EDIT*@
@if (Model.Pate != null && Model.Pate.Count > 0)
{
    <div class="form-group">
        @Html.LabelFor(model => model.Pizza.Nom, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Pizza.Nom, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Pizza.Nom, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Pate, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.IdPate, Model.Pate.Select(x => new SelectListItem() { Text = x.Nom, Value = x.Id.ToString() }), new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Pate, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Ingredients, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.ListBoxFor(model => model.IdsIngredient, Model.Ingredients.Select(x => new SelectListItem() { Text = x.Nom, Value = x.Id.ToString() }), new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Ingredients, "", new { @class = "text-danger" })
        </div>
    </div>
}
else
{
    @*pour la view Delete ou Details*@
    <div>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Pizza.Nom)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Pizza.Nom)
            </dd>

        </dl>

        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Pizza.Pate.Nom)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Pizza.Pate.Nom)
            </dd>

        </dl>

        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Pizza.Ingredients)
            </dt>

            <dd>
                @foreach (var item in Model.Pizza.Ingredients)
                {
                    @Html.DisplayFor(model => item.Nom)<br />
                }

            </dd>

        </dl>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

